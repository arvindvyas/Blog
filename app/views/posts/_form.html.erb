<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <%= render 'share/error_messages',:identity=>@post%>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :article %><br />
    <%= f.text_area :article %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
